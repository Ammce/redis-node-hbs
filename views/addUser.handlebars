<h1>Add User</h1>

{{#if error}} <span>{{error}}</span> {{/if}}

<form class="form" method="post" action="/users/add">
    <div class="form-group">
        <label>Id</label>
        <input type="text" name="id" placeholder="Add id" class="form-control" />
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="first_name" placeholder="Add Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="last_name" placeholder="Add Last Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" placeholder="Add Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" name="phone" placeholder="Add phone" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-danger" style="background: #00BC8C; border: #00BC8C">
</form>